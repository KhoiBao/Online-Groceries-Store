    <script>
        // Giỏ hàng dữ liệu
        const cartData = [
            { id: 1, price: 1210675, quantity: 1, inStock: true },
            { id: 2, price: 290000, quantity: 1, inStock: true },
            { id: 3, price: 0, quantity: 1, inStock: false },
            { id: 4, price: 350000, quantity: 2, inStock: true }
        ];

        // Cập nhật số lượng
        function updateQuantity(itemId, change) {
            const item = cartData.find(item => item.id === itemId);
            if (!item) return;

            const newQty = item.quantity + change;
            if (newQty < 1) return;

            item.quantity = newQty;
            document.getElementById(`qty-${itemId}`).value = newQty;
            updateCartSummary();
        }

        // Xóa sản phẩm
        function removeItem(itemId) {
            if (confirm("Bạn có chắc muốn xóa sản phẩm này khỏi giỏ hàng?")) {
                const index = cartData.findIndex(item => item.id === itemId);
                if (index !== -1) {
                    cartData.splice(index, 1);

                    // Xóa phần tử khỏi DOM
                    const itemElement = document.querySelector(`[onclick="removeItem(${itemId})"]`).closest('.cart-item');
                    itemElement.style.opacity = '0';
                    itemElement.style.transform = 'translateX(-20px)';

                    setTimeout(() => {
                        itemElement.remove();
                        updateCartSummary();
                        updateCartCount();

                        // Kiểm tra nếu giỏ hàng trống
                        if (cartData.length === 0) {
                            showEmptyCart();
                        }
                    }, 300);
                }
            }
        }

        // Cập nhật tổng thanh toán
        function updateCartSummary() {
            let subtotal = 0;
            let itemCount = 0;

            cartData.forEach(item => {
                if (item.inStock) {
                    subtotal += item.price * item.quantity;
                    itemCount += item.quantity;
                }
            });

            const shipping = subtotal > 500000 ? 0 : 30000;
            const tax = Math.round(subtotal * 0.08);
            const total = subtotal + shipping + tax;

            // Cập nhật DOM
            document.getElementById('subtotal').textContent = formatCurrency(subtotal);
            document.getElementById('shipping').textContent = formatCurrency(shipping);
            document.getElementById('tax').textContent = formatCurrency(tax);
            document.getElementById('total').textContent = formatCurrency(total);

            // Cập nhật tiêu đề
            document.querySelector('.page-title').innerHTML =
                `<i class="fas fa-shopping-cart"></i> Giỏ Hàng (${itemCount})`;
        }

        // Định dạng tiền tệ
        function formatCurrency(amount) {
            return amount.toLocaleString('vi-VN') + '₫';
        }

        // Cập nhật số lượng trên icon giỏ hàng
        function updateCartCount() {
            const activeItems = cartData.filter(item => item.inStock);
            const totalCount = activeItems.reduce((sum, item) => sum + item.quantity, 0);
            document.querySelector('.cart-count').textContent = totalCount;
        }

        // Hiển thị giỏ hàng trống
        function showEmptyCart() {
            const cartLayout = document.querySelector('.cart-layout');
            cartLayout.innerHTML = `
                <div class="empty-cart">
                    <div class="empty-cart-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <h2>Giỏ hàng của bạn đang trống</h2>
                    <p>Hãy thêm sản phẩm vào giỏ hàng để tiếp tục mua sắm</p>
                    <button class="continue-shopping" onclick="window.location.href='san-pham.html'">
                        <i class="fas fa-store"></i> Mua sắm ngay
                    </button>
                </div>
            `;
        }

        // Thanh toán
        function checkout() {
            const activeItems = cartData.filter(item => item.inStock);
            if (activeItems.length === 0) {
                alert('Giỏ hàng của bạn hiện không có sản phẩm nào để thanh toán!');
                return;
            }

            // Hiển thị thông báo thanh toán
            alert('Đang chuyển hướng đến trang thanh toán...\nTổng tiền: ' + document.getElementById('total').textContent);

            // Trong thực tế, bạn sẽ chuyển hướng đến trang thanh toán
            // window.location.href = 'thanh-toan.html';
        }

        // Khởi tạo
        document.addEventListener('DOMContentLoaded', function() {
            updateCartSummary();
            updateCartCount();
        });
    </script>
</body>
</html>