@model IEnumerable<DoAnCNPM.Models.SANPHAM>

@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<style>
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .product-card {
        background: #fff;
        border-radius: 8px;
        padding: 12px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.15);
        transition: 0.2s;
        text-align: center;
    }

        .product-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

        .product-card img {
            width: 100%;
            height: 160px;
            object-fit: cover;
            border-radius: 6px;
        }

    .product-name {
        margin-top: 10px;
        font-weight: bold;
        font-size: 16px;
        color: #333;
    }

    .product-price {
        color: #e60000;
        font-size: 18px;
        margin: 6px 0;
    }

    .btn-group {
        margin-top: 10px;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 12px;
    }
</style>

<h2 style="margin-bottom:20px">Danh sách sản phẩm</h2>

<p>
    @Html.ActionLink("➕ Thêm sản phẩm mới", "Create", null, new { @class = "btn btn-success" })
</p>

<div class="product-grid">
    @foreach (var sp in Model)
    {
        <div class="product-card">
            <img src="~/Images/@sp.HINH" alt="@sp.TENSP" />

            <div class="product-name">@sp.TENSP</div>

            <div class="product-price">
                @String.Format("{0:N0} đ", sp.GIABAN)
            </div>

            <div style="font-size:13px; color:#666">
                NSX: @sp.NSX
            </div>

            <div class="btn-group">
                @Html.ActionLink("Sửa", "Edit", new { id = sp.MASP }, new { @class = "btn btn-warning btn-sm" })
                @Html.ActionLink("Chi tiết", "Details", new { id = sp.MASP }, new { @class = "btn btn-info btn-sm" })
                @Html.ActionLink("Xóa", "Delete", new { id = sp.MASP }, new { @class = "btn btn-danger btn-sm" })
            </div>
        </div>
    }
</div>
