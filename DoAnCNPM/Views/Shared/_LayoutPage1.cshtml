@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Vui Bách Hóa</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            font-family: Arial;
        }

        /* Banner */
        .top-banner img {
            width: 100%;
            height: auto;
        }

        /* Header chính */
        .header-main {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px 40px;
            background: white;
        }

        .logo img {
            height: 60px;
        }

        /* Search box */
        .search-box {
            flex: 1;
            display: flex;
            margin: 0 30px;
        }

            .search-box input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px 0 0 5px;
            }

            .search-box button {
                padding: 10px 20px;
                background: #5a5a5a;
                color: white;
                border: none;
                border-radius: 0 5px 5px 0;
            }

        /* Header right */
        .header-right {
            display: flex;
            gap: 25px;
        }

            .header-right .item {
                display: flex;
                align-items: center;
                color: #333;
            }

                .header-right .item i {
                    font-size: 22px;
                    margin-right: 8px;
                }

        /* Menu */
        .menu {
            background: #0e4f1f;
            padding: 10px 0;
        }

            .menu ul {
                list-style: none;
                display: flex;
                justify-content: center;
                gap: 40px;
                margin: 0;
                padding: 0;
            }

            .menu a {
                color: white;
                font-weight: bold;
                font-size: 16px;
                text-transform: lowercase;
                text-decoration: none;
            }

        /* BODY */
        .container-body {
            padding: 20px 40px;
            min-height: 400px;
        }

        /* Footer */
        footer {
            background: #0e4f1f;
            color: white;
            padding: 40px 60px;
        }

        .footer-container {
            display: flex;
            justify-content: space-between;
        }

        .footer-col h3 {
            margin-bottom: 15px;
        }

        .footer-col ul {
            padding: 0;
            margin: 0;
            list-style: none;
        }

        .social-icons i {
            font-size: 24px;
            margin-right: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <!-- ======================= HEADER ======================= -->
    <header>

        <!-- Banner -->
        <div class="top-banner">
            <img src="~/Images/banner.png" alt="Banner" />
        </div>

        <!-- Header chính -->
        <div class="header-main">
            <div class="logo">
                <img src="~/Images/logo.png" alt="Logo" />
            </div>

            <!-- Ô tìm kiếm -->
            <div class="search-box">
                <input type="text" placeholder="bạn muốn tìm sản phẩm gì ?" />
                <button>tìm kiếm</button>
            </div>

            <!-- Liên hệ / Login / Giỏ hàng -->
            <div class="header-right">
                <div class="item">
                    <i class="fa fa-phone"></i>
                    <div>
                        <div>hỗ trợ khách hàng</div>
                        <div>0987.654.321</div>
                    </div>
                </div>

                <div class="item">
                    <i class="fa fa-user"></i>
                    <div>
                        <a href="/Account/Login">đăng nhập</a><br />
                        <a href="/Account/Register">đăng ký</a>
                    </div>
                </div>

                <div class="item">
                    <i class="fa fa-shopping-bag"></i>
                    <div>giỏ hàng</div>
                </div>
            </div>
        </div>

        <!-- Menu -->
        <nav class="menu">
            <ul>
                <li><a href="~/Home/Index">trang chủ</a></li>
                <li><a href="/Home/GioiThieu">giới thiệu</a></li>
                <li><a href="~/Home/SanPham">sản phẩm</a></li>
                <li><a href="/TinTuc">tin tức</a></li>
                <li><a href="/TuyenDung">tuyển dụng</a></li>
                <li><a href="/LienHe">liên hệ</a></li>
            </ul>
        </nav>
    </header>


    <!-- ======================= BODY CONTENT ======================= -->
    <div class="container-body">
        @RenderBody()
    </div>


    <!-- ======================= FOOTER ======================= -->
    <footer>
        <div class="footer-container">

            <!-- Cột 1 -->
            <div class="footer-col">
                <h3>Bách hóa vui - điểm đến của bà nội trợ</h3>
                <ul>
                    <li>địa chỉ: 140 - lê trọng tấn, tân phú, tp hcm</li>
                    <li>phone: 0987654321</li>
                    <li>email: bantungkhongten@gmail.com</li>
                </ul>
            </div>

            <!-- Cột 2 -->
            <div class="footer-col">
                <h3>Chăm sóc khách hàng</h3>
                <ul>
                    <li>chính sách vận chuyển</li>
                    <li>chính sách bảo hành</li>
                    <li>chính sách đổi trả</li>
                    <li>hướng dẫn thanh toán</li>
                </ul>
            </div>

            <!-- Cột 3 -->
            <div class="footer-col">
                <h3>Liên kết mạng xã hội</h3>
                <div class="social-icons">
                    <i class="fa-brands fa-facebook"></i>
                    <i class="fa-brands fa-youtube"></i>
                    <i class="fa-brands fa-facebook-messenger"></i>
                </div>
            </div>
        </div>
    </footer>

</body>
</html>
