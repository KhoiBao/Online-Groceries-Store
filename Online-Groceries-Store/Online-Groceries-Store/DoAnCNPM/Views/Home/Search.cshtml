


@using DoAnCNPM.Models
@model List<SANPHAM>

@{
    ViewBag.Title = "Kết quả tìm kiếm";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h3>
    Kết quả tìm kiếm cho:
    <span style="color:#0a8f3c">@ViewBag.Keyword</span>
</h3>

@if (!Model.Any())
{
    <p>Không tìm thấy sản phẩm phù hợp.</p>
}
else
{
    <div style="display:grid; grid-template-columns:repeat(4,1fr); gap:15px;">
        @foreach (var product in Model)
        {
            <div style="background:#fff; padding:10px; border:1px solid #eee;">
                <a href="@Url.Action("Details", "Home", new { id = product.MASP })">
                    <img src="@Url.Content("~/Images/" + product.HINH)"
                         style="width:100%; height:150px; object-fit:contain" />
                </a>

                <div>@product.TENSP</div>
                <div style="color:red; font-weight:bold">
                    @string.Format("{0:N0}đ", product.GIABAN)
                </div>
            </div>
        }
    </div>
}
